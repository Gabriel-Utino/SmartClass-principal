  <script>
    // 新しい日付を追加する
    async function addDate() {
      const today = new Date().toISOString().split('T')[0]; // 今日の日付
      const response = await fetch('/faltas', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ data_falta: today })
      });

      if (response.ok) {
        alert('新しい日付が追加されました');
        location.reload(); // ページをリロードして反映
      } else {
        alert('エラーが発生しました');
      }
    }
  </script>
