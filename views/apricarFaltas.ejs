  <!-- 以下、ベースのHTMLファイルのコンテンツを続ける -->
  <div class="container mt-5">
    <h1>欠席管理</h1>
    <table>
      <thead>
        <tr>
          <th>名前</th>
          <% // 日付を動的にヘッダーに表示 const uniqueDates=[...new Set(students.map(s=> s.data_falta).filter(Boolean))];
            %>
            <% uniqueDates.forEach(date=> { %>
              <th>
                <%= date %>
              </th>
              <% }) %>
                <th>
                  <span class="add-date-btn" onclick="addDate()">＋</span>
                </th>
        </tr>
      </thead>
      <tbody>
        <% // 生徒ごとの行を生成 const groupedByStudent=students.reduce((acc, s)=> {
          acc[s.id_aluno] = acc[s.id_aluno] || { nome: s.nome, faltas: [] };
          acc[s.id_aluno].faltas.push(s);
          return acc;
          }, {});

          Object.values(groupedByStudent).forEach(student => {
          %>
          <tr>
            <td>
              <%= student.nome %>
            </td>
            <% uniqueDates.forEach(date=> { %>
              <% const falta=student.faltas.find(f=> f.data_falta === date);
                if (falta) {
                if (falta.justificado === 1) { %>
                <td>○</td>
                <% } else { %>
                  <td>×</td>
                  <% } } else { %>
                    <td>-</td>
                    <% } %>
                      <% }) %>
                        <td>-</td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>





